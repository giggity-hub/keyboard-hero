<style is:global>
    .wrapper{
        position: absolute;
        padding: 20px;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    #text-display{
        font-family: 'Press Start 2P';
        display:flex;
        flex-wrap: wrap;
        max-width: 800px;
        --selected-row:0;
        transform: translateY(calc(-1 * var(--selected-row) * var(--line-height)));
    }

    .neon-border{
        
        box-shadow: 
            0px 0px 5px 1px white,
            inset 0px 0px 5px 5px pink,
            0px 0px 10px 10px pink;
            border-radius: 10px;
            padding: 20px;
            background: rgba(0, 0, 0, 0.434);
            color: white;
    }

    #text-container{
        
        
        
        /* background: orange; */
        height: calc(3 * var(--line-height));
        overflow: hidden;
        
    }
    .word{
        /* background: blue; */
        display: flex;
        /* display: inline-block; */
        position: relative;
        /* padding-right: 10px; */
    }
    .char{
        width: var(--char-width);
        height: var(--line-height);
        /* background: lightblue; */
        display: block;
        text-align: center;
    }
    .char[data-status="correct"]{
        box-shadow: inset 0 -3px 0 0 white;
        /* background: green; */
    }
    .char[data-status="false"]{
        background: pink;
        color: black;
    }
    .char[data-status="clean"]{
        /* background: gray; */
    }
    .char.extra{
        background: pink;
        color: black;
    }
    .space{
        width: var(--char-width);
        display: block;
    }

    /* .space{
        height: 100%;
        line-height: 10px;
        background: orange;
        width: 10px;
        display: inline-block;
    } */
    .has-caret{
        background: white !important;
        color: black;
        /* border-left: 2px solid black; */
    }
</style>